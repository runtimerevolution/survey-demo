<div class="container">
  <div class="questionnaires_<%= action_name %>">
    <h1>
      Surveys
    </h1>
    <hr>
    <% if @surveys.empty? %>
      <p> There are no surveys </p>
    <% else %>
      <p>
        Filter by type:
        <%= render 'survey_label_all' %>
        <%= render partial: 'survey_label', collection: SurveysHelper::SURVEY_TYPES, as: :survey_type, locals: { with_badges: true } %>
      </p>
      <table class='table table-nonfluid survey-table'>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Questions</th>
            <th>Participants</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'survey', collection: @surveys %>
        </tbody>
      </table>
      <%= paginate @surveys %>
    <% end %>
  </div>
</div>
